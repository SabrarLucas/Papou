{% extends "base.html.twig" %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}

{% include "partials/_adminnav.html.twig" %}

    <main class="container mb-3">
        <section class="row">
            <div class="col-12">
                <h1>{{ product.name }}</h1>
            </div>
            <div class="mt-3">
                <p>ID produit : {{ product.id }}</p>
                <p>Categorie : {{ product.idcategory.name }}</p>
                <p>Partenaire : {{ product.idsupplier.companyname }}</p>
                <p>Nom produit: {{ product.name }}</p>
                <p>Description : {{ product.description }}</p>
                <p>Prix : {{ product.price }}</p>
                <p>Age : {{ product.age }}</p>
                <p>Stock : {{ product.stock }}</p>
                <p>Etat : {{ product.state }}</p>
                <p>Longueur : {{ product.length }}</p>
                <p>Largeur : {{ product.width }}</p>
                <p>Hauteur : {{ product.heigh }}</p>
                <p>Date d'ajout : {{ product.createdat | date("m/d/Y") }}</p>
            </div>
            <div class="mt-3">
                <h2>Actions</h2>
                <a href="{{ path('admin_product_delete', {id: product.id}) }}" class="btn btn-danger">Supprimer</a>
                <a href="{{ path('admin_product_edit', {id: product.id})}}" class="btn btn-warning">Modifier</a>
            </div>
        </section>
    </main>

{% endblock %}