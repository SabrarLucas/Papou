{% extends 'base.html.twig' %}

{% block body %}



    
    <div class="pname">{{product.name}}</div>
    
    <div class="flex-box">

        <div class="left">
            <div class="big-img">
                <img src="{{product.pictures[0].picName}}">
            </div>
            <div class="images">
                <div class="small-img">
                    <img src="{{product.pictures[0].picName}}" onclick="showImg(this.src)">
                </div>
                <div class="small-img">
                    <img src="{{product.pictures[1].picName}}" onclick="showImg(this.src)">
                </div>
                <div class="small-img">
                    <img src="{{product.pictures[2].picName}}" onclick="showImg(this.src)">
                </div>
                <div class="small-img">
                    <img src="{{product.pictures[3].picName}}" onclick="showImg(this.src)">
                </div>
            </div>
        </div>

        <div class="right">
            <div class="price">{{product.price}} <i class="fa-solid fa-euro-sign"></i></div>
            <div class="quantity">
                <p>Quantit√© :</p>
                <input type="number" min="1" max="{{ product.stock }}" value="1">
            </div>
            <div class="btn-box">
                <button class="cart-btn">Ajouter au panier</button>
                <button class="buy-btn">Acheter</button>
            </div>
        </div>
    </div>


    <script>
        let bigImg = document.querySelector('.big-img img');
        function showImg(pic){
            bigImg.src = pic;
        }
    </script>


{% endblock %}