{% extends 'base.html.twig' %}

{% block title %}
{{ product.name }}
{% endblock %}

{% block body %}
<div class="product-page">
    
        <div class="flex-box">
            
            <div class="left">
                <div class="big-img">
                    <img src="{{ product.pictures[0].picName }}" alt="{{ product.name }}">
                </div>

                <div class="supplier-section palatino">
                    <div>
                        <h1>Vendu par : </h1>
                    </div>
                    <div class="supplier-name">
                        <h1>{{ product.idSupplier.companyName }}</h1>
                    </div>
                </div>

            </div>
            


            <div class="right">
                <div class="images">
                    <div class="small-img">
                        <img src="{{ product.pictures[0].picName }}" onclick="showImg(this.src)">
                    </div>
                    <div class="small-img">
                        <img src="{{ product.pictures[1].picName }}" onclick="showImg(this.src)">
                    </div>
                    <div class="small-img">
                        <img src="{{ product.pictures[2].picName }}" onclick="showImg(this.src)">
                    </div>
                    <div class="small-img">
                        <img src="{{ product.pictures[3].picName }}" onclick="showImg(this.src)">
                    </div>
                </div>
                <div class="pname">{{ product.name }}</div>
                <hr>
                <div>{{ product.description }}</div>
                <hr><br>
                <div>{{ product.state }}</div>
                <div class="price">{{ product.price }} <i class="fa-solid fa-euro-sign"></i></div>


                <div class="detail-actions">
                    <form method="post" action="{{ path('cart_add', {'id': product.id}) }}">
                            <div class="btn-box">
                                <button class="cart-btn" type="submit">Ajouter au panier  <i class="fa-solid fa-cart-shopping"></i></button>
                            </div>
                    </form>
                    <form method="post" action="">
                        <div class="detail-ajout-favoris">
                            <i class="fa-solid fa-heart"></i>
                        </div>
                    </form>
                </div>


            </div>


        </div>

</div>

<br>

<div class="title-other-products copperplate">
    <h1>Autres produits de notre partenaire :</h1>
</div>


{% include "partials/home_carousel1.html.twig" %}
<br><br>

            <script>
            let bigImg = document.querySelector('.big-img img');
            function showImg(pic){
                bigImg.src = pic;
            }
        </script>

{% endblock %}
