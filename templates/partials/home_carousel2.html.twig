<section class="product-slider">

	<ul id="autoWidth" class="cs-hidden">

		{% for product in products %}
	
		<li class="item-{{product.id}}">
			<div class="box"><!--img-box-->

				<div class="slide-img">

					<img alt="{{product.name}}" src="{{product.pictures[0].picName}}">
					
					<div class="overlay"><!--overlayer-->
						<a href="{{ path('detail', {'id': product.id}) }}" class="buy-btn">ACHETER</a><!--buy-btn-->
					</div>

				</div>

				<div class="detail-box"><!--detail-box-->

					<div class="type"><!--type-->
						<a href="#">{{product.name}}</a>
						{# <span>{{ product.description }}</span> #}
					</div>

					<a href="#" class="price">â‚¬{{product.price}}</a><!--price-->

				</div>

			</div>		
		</li>
		{% endfor %}

	</ul>

</section>