{% if products.pages > 1 %}
    <nav aria-label="Page navigation example">
        <ul class="inline-flex -space-x-px text-sm">
            {% if products.page > 1 %}
                <li>
                    <a href="{{ path('productAge', {'age': age, 'page': products.page - 1}) }}" class="flex items-center justify-center px-3 h-8 ms-0 leading-tight text-gray-500 bg-white border border-e-0 border-gray-300 rounded-s-lg hover:bg-gray-100 hover:text-gray-700">Previous</a>
                </li>
            {% endif %}
            {% for page in 1..products.pages %}
                <li>
                    <a href="{{ path('productAge', {'age': age, 'page': page}) }}" class="flex items-center justify-center px-3 h-8 leading-tight {{ (page == products.page) ? 'border-gray-300 bg-blue-50' : 'text-gray-500 bg-white' }}  border border-gray-300 hover:bg-gray-100 hover:text-gray-700">{{ page }}</a>
                </li>
            {% endfor %}
            {% if products.page < products.pages %}
                <li>
                    <a href="{{ path('productAge', {'age': age, 'page': products.page + 1}) }}" class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded-e-lg hover:bg-gray-100 hover:text-gray-700">Next</a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}